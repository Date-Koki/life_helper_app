<div class="post-container">
  <h2>ライフハック投稿</h2>

  <% if @lifehack_post.errors.any? %>
  <div class="error-messages">
    <ul>
      <% @lifehack_post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= form_with model: @lifehack_post, local: true do |f| %>
    <div class="post-field">
      <%= f.label :title, "タイトル" %><br>
      <%= f.text_field :title %>
    </div>

    <div class="post-field">
      <%= f.label :category_id, "カテゴリー" %><br>
      <%= f.collection_select :category_id, Category.all, :id, :name, {}, { class: "form-select" } %>
    </div>

    <div class="post-field">
      <%= f.label :image, "画像" %><br>
      <%= f.file_field :image, id:"post-image" %>
    </div>

    <div class="post-field">
      <%= f.label :description, "内容" %><br>
      <%= f.text_area :description %>
    </div>

    <div class="post-actions mt-3">
      <%= f.submit "投稿", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>