<div class="mypage-container">
  <h2>マイページ</h2>

  <!-- アカウント情報 -->
  <section class="account-info">
    <h3>アカウント情報</h3>
    <p>名前: <%= @user.name %></p>
    <p>ニックネーム: <%= @user.nickname %></p>
    <p>メールアドレス: <%= @user.email %></p>
    <%= link_to "編集", edit_user_path(@user), class: "btn btn-primary" %>
  </section>

  <!-- TODO投稿 -->
  <section class="todo-posts">
    <h3>自分のTODO投稿</h3>
    <% @posts.each do |post| %>
      <div class="post-card">
        <h4><%= post.title %></h4>
        <p><%= post.description %></p>
        <%= link_to "編集", edit_post_path(post), class: "btn btn-secondary" %>
        <%= link_to "削除", post_path(post), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
      </div>
    <% end %>
  </section>

  <!-- ライフハック投稿 -->
  <section class="lifehack-posts">
    <h3>自分のライフハック投稿</h3>
    <% @lifehack_posts.each do |lh_post| %>
      <div class="post-card">
        <h4><%= lh_post.title %></h4>
        <p><%= lh_post.description %></p>
        <% if lh_post.image.attached? %>
          <%= image_tag lh_post.image.variant(resize_to_limit: [300, 300]) %>
        <% end %><br>
        <%= link_to "編集", edit_lifehack_post_path(lh_post), class: "btn btn-secondary" %>
        <%= link_to "削除", lifehack_post_path(lh_post), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
      </div>
    <% end %>
  </section>
</div>