<div class="post-container">
  <h2>新しい投稿</h2>

  <% if @post.errors.any? %>
  <div class="error-messages">
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= form_with model: @post, local: true do |f| %>
    <div class="post-field">
      <%= f.label :title, "タイトル" %><br>
      <%= f.text_field :title %>
    </div>

    <div class="post-field">
      <%= f.label :category_id, "カテゴリー" %><br>
      <%= f.collection_select :category_id, Category.all, :id, :name, {}, { class: "form-select" } %>
    </div>

    <div class="post-field">
      <%= f.label :schedule_at, "日時（デッドライン）" %><br>
      <%= f.datetime_local_field :schedule_at %>
    </div>

    <div class="post-field">
      <%= f.label :description, "やること" %><br>
      <%= f.text_area :description %>
    </div>

    <div class="post-actions mt-3">
      <%= f.submit "投稿", root_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>