<div class="auth-container">
  <h2>ログイン</h2>

  <%= form_with(model: @user, as: resource_name, url: session_path(resource_name), local: true) do |f| %>

    <div class='login-flash-message'>
      <% if flash[:alert] %>
        <p class="error-message"><%= flash[:alert] %></p>
      <% end %>
      <% if flash[:notice] %>
        <p class="notice-message"><%= flash[:notice] %></p>
      <% end %>
    </div>
    <div>
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div>
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="auth-actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

  <div class="auth-links">
    <%= link_to "パスワードを忘れましたか？", new_password_path(resource_name) %><br>
    <%= link_to "アカウント登録", new_registration_path(resource_name) %>
  </div>
</div>