<div class="auth-container">
  <h2>アカウント登録</h2>

  <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>

    <!-- Deviseのエラーメッセージを1回だけ表示 -->
    <%= render 'devise/shared/error_messages', model: f.object %>

    <!-- 名前 -->
    <div class="auth-field">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name %>
    </div>

    <!-- ニックネーム -->
    <div class="auth-field">
      <%= f.label :nickname, "ニックネーム" %>
      <%= f.text_field :nickname %>
    </div>

    <!-- メールアドレス -->
    <div class="auth-field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email %>
    </div>

    <!-- パスワード -->
    <div class="auth-field">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>
    </div>

    <!-- パスワード確認 -->
    <div class="auth-field">
      <%= f.label :password_confirmation, "パスワード確認" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="auth-actions">
      <%= f.submit "登録する", class: "auth-btn" %>
    </div>
  <% end %>
</div>